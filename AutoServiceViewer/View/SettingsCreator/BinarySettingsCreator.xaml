<UserControl x:Class="AutoServiceViewer.View.SettingsCreator.BinarySettingsCreator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoServiceViewer.View.SettingsCreator"
             xmlns:viewmodels="clr-namespace:AutoServiceViewer.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewmodels:BinarySettingsViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel HorizontalAlignment="Left" Width="105">
            <Button Command="{Binding OpenFileCommand}" Width="100" Height="20" Content="Выбрать файл" Margin="0,40"/>
        </DockPanel>
    </Grid>
</UserControl>
